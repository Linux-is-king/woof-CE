download() {
    [ -f at-spi2-atk-2.38.0.tar.xz ] || wget -t 3 -T 60 https://download.gnome.org/sources/at-spi2-atk/2.38/at-spi2-atk-2.38.0.tar.xz
build() {
tar -xvf at-spi2-atk-2.38.0.tar.xz
cd at-spi2-atk-2.38.0
mkdir build &&
cd    build &&

meson --prefix=/usr --buildtype=release .. &&
ninja
ninja install
glib-compile-schemas /usr/share/glib-2.0/schemas
}
